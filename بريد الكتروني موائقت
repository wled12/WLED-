<script>
const API_KEY='sk_fuRCZ0nP0kvZMldH_t9VJtaJT4zROsV9ydBLL4X0BAlShXccN1MLaqxMocwI6rtARvV5qzCg2XSbWYPis';
const BASE_URL='https://api.mailslurp.com';
let inboxId=null;
let interval=null;

function closeOverlay() {
  document.getElementById('screenOverlay').style.display='none';
}

async function createInbox() {
  const r = await fetch(`${BASE_URL}/createInbox`, {
    method:'POST',
    headers:{'x-api-key':API_KEY}
  });
  const d = await r.json();
  inboxId = d.id;
  document.getElementById('email').innerText = d.emailAddress;
  document.getElementById('messages').innerHTML = '';
  startTimer(10);
}

function copyEmail() {
  const emailBox = document.getElementById('email');
  if(emailBox.innerText === '—') return;
  navigator.clipboard.writeText(emailBox.innerText);
  alert('تم النسخ ✔️');
}

async function getMessages() {
  if(!inboxId) return;
  const r = await fetch(`${BASE_URL}/emails?inboxId=${inboxId}`, {
    headers:{'x-api-key':API_KEY}
  });
  const j = await r.json();
  const arr = Array.isArray(j) ? j : j.content || [];
  const messagesEl = document.getElementById('messages');
  messagesEl.innerHTML = '';
  if(!arr.length) {
    messagesEl.innerHTML = '<div class="msg">لا توجد رسائل</div>';
    return;
  }
  for(const m of arr){
    const rr = await fetch(`${BASE_URL}/emails/${m.id}`, {headers:{'x-api-key':API_KEY}});
    const dd = await rr.json();
    const code = dd.body.match(/\d{4,6}/);
    messagesEl.innerHTML += `<div class="msg">${m.subject||'رسالة جديدة'}${code?`<span>رمز التحقق: ${code[0]}</span>`:''}</div>`;
  }
}

function startTimer(min){
  clearInterval(interval);
  let t = min*60;
  const timerEl = document.getElementById('timer');
  interval = setInterval(()=>{
    const m = Math.floor(t/60);
    const s = t%60;
    timerEl.innerText = `⏳ ${m}:${s<10?'0'+s:s}`;
    if(--t < 0){
      clearInterval(interval);
      document.getElementById('email').innerText = '—';
      document.getElementById('messages').innerHTML = '';
      timerEl.innerText = 'انتهت الصلاحية';
      inboxId = null;
    }
  },1000);
}

/* Mouse interaction with bubbles */
document.addEventListener('mousemove', e=>{
  const bubbles = document.querySelectorAll('.bubble');
  bubbles.forEach((b,i)=>{
    const x = (e.clientX/window.innerWidth-0.5)*20;
    const y = (e.clientY/window.innerHeight-0.5)*20;
    b.style.transform = `translate(${x*(i+1)}px,${y*(i+1)}px)`;
  });
});
</script>
